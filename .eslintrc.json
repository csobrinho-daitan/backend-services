{
    "env": {
        "es2021": true,
        "node": true,
        "jest": true
    },
    
    "extends": [
        "airbnb-base",
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "@typescript-eslint",
        "simple-import-sort"
    ],
    "rules": {
        "arrow-body-style": ["error", "always"],
        "simple-import-sort/imports": "error",
        "import/prefer-default-export": "off",
        "max-classes-per-file": "off",
        "import/extensions": "off",
        "no-console": "off",
        "import/no-extraneous-dependencies": "off",
        "no-shadow": "off",
        "@typescript-eslint/no-shadow": ["error"],
        "global-require":"off"
    },
    "settings": {
        "import/parsers": {
          "@typescript-eslint/parser": [".ts", ".tsx"]
        },
        "import/resolver": {
          "typescript": {
            "alwaysTryTypes": true,
            "paths": "./tsconfig.json"
          }
        }
      }
}
